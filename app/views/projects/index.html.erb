<div class="container">
  <p id="notice"><%= notice %></p>

<h2>Listing Projects</h2>

<div class="row">
  <div class="col-md-3">
    <p style="font-size: 20px; font-weight:bold;">Name</p>
  </div>

  <div class="col-md-3">
    <p style="font-size: 20px; font-weight:bold;">Description</p>
  </div>
  <div class="col-md-3 col-md-offset-2">
    <p style="font-size: 20px; font-weight:bold;">Ends at</p>
  </div>
</div>

    <% @projects.each do |project| %>
      <div class="col-md-3">
        <p><%= project.name %></p>
      </div>
      <div class="col-md-3">
        <p><%= project.description %></p>
      </div>
      <div class="col-md-3">
        <p><%= project.ends_at %></p>
      </div>
      <div class="col-md-1">
        <p><%= link_to 'Show', project %></p>
      </div>
      <div class="col-md-1">
        <%= link_to 'Edit', edit_project_path(project) %>
      </div>
      <div class="col-md-1">
        <p><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    <% end %>

<%= link_to 'New Project', new_project_path %>

</div>